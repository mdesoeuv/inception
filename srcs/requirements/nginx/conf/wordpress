#/etc/nginx/nginx.conf

server {
        listen 80;
        listen [::]:80;

        server_name mdesoeuv.42lyon.fr www.mdesoeuv.42lyon.fr;

        index index.php index.html index.htm;

        root /var/www/html/wordpress/;

		#used for certificates
        location ~ /.well-known/acme-challenge {
                allow all;
                root /var/www/html;
        }

		#redirect to base url in case of non-existing page requested
        location / {
                try_files $uri $uri/ /index.php$is_args$args;
        }

		#handles proxy requests to php-fpm
        location ~ \.php$ {
                try_files $uri =404;
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_pass mdesoeuv.42lyon.fr:9000;
                fastcgi_index index.php;
                include fastcgi_params;
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                fastcgi_param PATH_INFO $fastcgi_path_info;
        }

		#denies .htaccess to users
        location ~ /\.ht {
                deny all;
        }
        
		#optimisations
        location = /favicon.ico { 
                log_not_found off; access_log off; 
        }
        location = /robots.txt { 
                log_not_found off; access_log off; allow all; 
        }
        location ~* \.(css|gif|ico|jpeg|jpg|js|png)$ {
                expires max;
                log_not_found off;
        }
}